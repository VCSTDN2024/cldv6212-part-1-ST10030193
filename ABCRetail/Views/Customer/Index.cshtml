@model IEnumerable<Customer>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
	<h3 class="mb-0">Customer</h3>
    <a class="btn btn-dark" asp-action="Create" asp-controller="Customer">Add Customer</a>
</div>
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>@e.FirstName</td>
                            <td>@e.LastName</td>
                            <td>@e.Email</td>
                            <td>@e.PhoneNumber</td>
                            <td>@e.Address</td>
                            <td>
                                <a class="btn btn-sm btn-primary me-1"
                                   asp-action="Update"
                                   asp-controller="Customer"
                                   asp-route-PartitionKey="@e.PartitionKey"
                                   asp-route-RowKey="@e.RowKey">
                                    Edit
                                </a>

                                <a class="btn btn-sm btn-danger"
                                   asp-action="Delete"
                                   asp-controller="Customer"
                                   asp-route-PartitionKey="@e.PartitionKey"
                                   asp-route-RowKey="@e.RowKey">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>


