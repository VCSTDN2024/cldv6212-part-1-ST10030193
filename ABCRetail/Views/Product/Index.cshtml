@model IEnumerable<Product>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
	<h3 class="mb-0">Products: </h3>
    <a class="btn btn-dark" asp-action="Create" asp-controller="Product">Add Product</a>
</div>
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Product Description</th>
                        <th>Product Type</th>
                        <th>Product Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>@e.ProductName</td>
                            <td>@e.ProductDescription</td>
                            <td>@e.ProductType</td>
                            <td>
                                <img src="@e.ProductImageURL" class="img-thumbnail" style="max-width: 100px;" alt="Product Image" />
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary me-1"
                                   asp-action="Update"
                                   asp-controller="Product"
                                   asp-route-PartitionKey="@e.PartitionKey"
                                   asp-route-RowKey="@e.RowKey">
                                    Edit
                                </a>

                                <a class="btn btn-sm btn-danger"
                                   asp-action="Delete"
                                   asp-controller="Product"
                                   asp-route-PartitionKey="@e.PartitionKey"
                                   asp-route-RowKey="@e.RowKey">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>


