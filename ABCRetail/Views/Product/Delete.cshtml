@model Product

<div class="container">
    <h3>Delete Product:</h3>

    <form method="post">
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Product Name</th>
                    <th>Product Description</th>
                    <th>Product Type</th>
                    <th>Product Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.ProductName</td>
                    <td>@Model.ProductDescription</td>
                    <td>@Model.ProductType</td>
                    <td>
                        <img src="@Model.ProductImageURL" class="img-thumbnail" style="max-width: 100px;" alt="Product Image" />
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
